{
	"compilerOptions": {
		"target": "ES2020",
		"module": "node16",
		"lib": ["ES2020"],
		"strict": true,
		"noImplicitAny": true,
		"noEmitOnError": true,
		"sourceMap": true,
		"esModuleInterop": false,
		"moduleResolution": "node16",
		"resolveJsonModule": true,
		"skipLibCheck": false,
		"outDir": "dist",
		"types": ["node", "mocha", "vscode"]
	},
	"include": ["extension.ts", "src/**/*.ts", "tools/**/*.mts", "test/**/*.ts", "eslint.config.mts"],
	"exclude": ["node_modules", "dist", ".vscode-test"]
}
